<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="js-pokemon-modal modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pokemon-name">Feraligtr</span>
          <small class="js-pokemon-number">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <dl class="dl-horizontal">
          <dt>Height</dt>
          <dd  class="js-pokemon-height">23</dd>

          <dt>Weight</dt>
          <dd  class="js-pokemon-weight">888</dd>

          <dt>Hit points</dt>
          <dd  class="js-pokemon-hp">888</dd>

          <dt>Attack</dt>
          <dd  class="js-pokemon-attack">888</dd>

          <dt>Defense</dt>
          <dd  class="js-pokemon-defense">888</dd>

          <dt>Special Attack</dt>
          <dd  class="js-pokemon-sp-attack">888</dd>

          <dt>Special Defense</dt>
          <dd  class="js-pokemon-sp-defense">888</dd>

          <dt>Speed</dt>
          <dd  class="js-pokemon-speed">888</dd>

          <dt>Types</dt>
          <dd  class="js-pokemon-types">888</dd>
        </dl>
        <img id="js-pokemon-img" src= "" >
        <p class="js-pokemon-descrip"></p>
        <button class="js-btn-evolution">Evolutions</button>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->


<div class="js-evolution-modal modal fade">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pokemon-name">Evolutions</span>
        </h3>
      </div><!-- .modal-header -->

      <div class="evol-modal-body">
          
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->